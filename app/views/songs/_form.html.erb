<%= form_for(song) do |f| %>
	<% if song.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

			<ul>
				<% song.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div> <br>

	<div class="field">
		<%= f.label :artist_id %> <br>
		<% @artists.each do |artist| %>
	        <%= f.radio_button :artist_id, artist.id %><%= artist.name %> <br>
	    <% end %>
	</div> <br>

	<div class="field">
		<%= f.label :genre_id %> <br>
		<% @genres.each do |genre| %>
	        <%= f.radio_button :genre_id, genre.id %><%= genre.name %> <br>
	    <% end %>
	</div> <br>

	<div class="field">
		<%= f.label :duration %>
		<%= f.text_field :duration %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>